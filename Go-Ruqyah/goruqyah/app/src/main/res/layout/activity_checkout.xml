<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".View.Checkout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="@string/pemesanan_ruqyah"
            android:textSize="35sp"
            android:textColor="@color/bg1"/>

        <EditText
            android:id="@+id/alamat_checkout"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/form_auth"
            android:hint="@string/alamat"
            android:inputType="text"
            android:textSize="20sp"
            android:paddingHorizontal="15dp"
            tools:ignore="Autofill,LabelFor" />
        <EditText
            android:id="@+id/telp_checkout"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:inputType="text"
            android:hint="No Telepon"
            android:textSize="20sp"
            android:paddingHorizontal="15dp"
            android:background="@drawable/form_auth"
            tools:ignore="Autofill,LabelFor" />

        <EditText
            android:id="@+id/pesan"
            android:layout_width="303dp"
            android:layout_height="49dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/form_auth"
            android:hint="Jenis Pesanan"
            android:inputType="text"
            android:paddingHorizontal="15dp"
            android:textSize="20sp"
            tools:ignore="Autofill,LabelFor" />

        <ImageButton
            android:id="@+id/btncheckout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/prosespesanbtn"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center"
            tools:ignore="ContentDescription" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
    </LinearLayout>

</ScrollView>